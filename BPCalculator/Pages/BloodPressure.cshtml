@page
@model BPCalculator.Pages.BloodPressureModel

@{
    ViewData["Title"] = "Blood Pressure Category Calculator";
}


<h4 class="text-capitalize">Blood Pressure Category Calculator</h4>
<p class="text-info">This application will calculate the Blood Pressure Category based on the values you provide below.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="form1">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>
            <div class="form-group">
                <label asp-for="BP.Systolic" class="control-label"></label>
                <input asp-for="BP.Systolic" class="form-control" onchange="this.form.submit()" />
                <span asp-validation-for="BP.Systolic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BP.Diastolic" class="control-label"></label>
                <input asp-for="BP.Diastolic" class="form-control" onchange="this.form.submit()" />
                <span asp-validation-for="BP.Diastolic" class="text-danger"></span>
            </div>
            @if (ViewData.ModelState.IsValid)
            {
                <div class="form-group">
                    @Html.DisplayFor(model => model.BP.Category, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
